<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://code.alibabatech.com/schema/dubbo
                          http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签 -->
    <dubbo:application name="iot_console" owner="dfzt"/>

    <!--dubbo这个服务所要暴露的服务地址所对应注册中心 -->
    <!--<dubbo:registry address="N/A"/> -->
    <!-- N/A 表示由 dubbo 自动分配地址。或者说是一种直连的方式，不通过注册中心。 -->
    <dubbo:registry address="zookeeper://10.168.1.101:2181" timeout="120000" check="false"/>

    <dubbo:consumer check="false"/>

    <!-- 协议解析 -->
    <dubbo:reference id="productFunService"
                     interface="com.dfzt.analysis.api.ProductFun698Service"
                     version="0.0.1"
                     timeout="60000"/>
    <dubbo:reference id="productFunParamService"
                     interface="com.dfzt.analysis.api.ProductFun698ParamService"
                     version="0.0.1"
                     timeout="60000"/>
    <!-- 网关 -->
    <dubbo:reference id="groupInfoDubboService"
                     interface="org.dfzt.gateway.api.service.IGroupInfoService"
                     version="0.0.1"
                     timeout="60000"/>
    <dubbo:reference id="topicDubboService"
                     interface="org.dfzt.gateway.api.service.ITopicService"
                     version="0.0.1"
                     timeout="60000"/>

    <!-- 规则引擎-->
    <dubbo:reference id="ruleBaseService"
                     interface="com.dfzt.web.api.RuleBaseService"
                     version="0.0.1" timeout="60000"/>
    <dubbo:reference id="ruleSqlService"
                     interface="com.dfzt.web.api.RuleSqlService"
                     version="0.0.1" timeout="60000"/>
    <dubbo:reference id="ruleForwardService"
                     interface="com.dfzt.web.api.RuleForwardService"
                     version="0.0.1" timeout="60000"/>
    <dubbo:reference id="ruleHandleHistoryService"
                     interface="com.dfzt.web.api.RuleHandleHistoryService"
                     version="0.0.1" timeout="60000"/>
    <dubbo:reference id="ruleParse"
                     interface="com.dfzt.engine.api.RuleParse"
                     version="0.0.1" timeout="60000"/>

</beans>
